<form class="form-vertical">
    <table data-bind="foreach: gpio_settings">
        <tr>
            <td>
                <div data-bind="text: gpio"></div>
            </td>
            <td>
                <select class="gpio-type" data-bind="options: $root.gpioTypes(), selectedOptions: type"></select>
            </td>
            <td>
                <div data-bind="ifnot: type() == 'UNDEFINED'">
                    <span><input class="gpio-label" data-bind="textInput: $data.label" /></span>
                </div>
            </td>
            <td>
                <div data-bind="if: type() == 'OUTPUT'">
                    <input type='checkbox' data-bind="checked: $data.initialValue">Initial
                    value
                    </input>
                </div>
                <div data-bind="if: type() == 'INPUT'">
                    <input type='checkbox' data-bind="checked: $data.pullUp">Pull
                    up
                    </input>
                    <input type='checkbox' data-bind="checked: $data.activeState">Active
                    state
                    </input>
                    <span><input class='gpio-bounce' data-bind="textInput: $data.bounceTime" />Bounce time [ms]</span>
                </div>
            </td>
        </tr>
    </table>
</form>
